{
  "name": "typescript-library-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for TypeScript 2.0 libraries",
  "author": "Max Davidson <davidsonmax@gmail.com>",
  "license": "MIT",
  "repository":
    "git+https://github.com/maxdavidson/typescript-library-boilerplate.git",
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/bundle.js",
  "types": "dist/bundle.d.ts",
  "scripts": {
    "build": "npm run build:lib & npm run build:umd",
    "build:lib": "tsc --outDir lib --module commonjs",
    "build:es": "tsc --outDir es --module es2015",
    "build:umd":
      "npm run build:es && rollup --config && dts-bundle --name dist/bundle --main es --outputAsModuleFolder",
    "clean": "rimraf dist es lib coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --type-check --format stylish",
    "test": "jest --env=jsdom --config=./jest.config.js",
    "test:watch": "yarn test --watch",
    "test:int": "yarn test --coverage --config=./jest.config.integration.js",
    "test:updateMocks":
      "UPDATE_MOCKS=true yarn test --coverage --config=./jest.config.integration.js",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": ["typescript", "lib", "library", "boilerplate"],
  "files": ["lib", "es", "dist"],
  "dependencies": {
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/node": "^8.0.0",
    "isomorphic-fetch": "^2.2.1",
    "prettier": "^1.12.1",
    "qs": "^6.5.1",
    "tslib": "^1.6.0",
    "tslint-config-prettier": "^1.12.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.0",
    "@types/qs": "^6.5.1",
    "async-prompt": "^1.0.1",
    "dts-bundle": "^0.7.2",
    "jest": "^20.0.0",
    "pascal-case": "^2.0.1",
    "prompt-sync": "^4.1.6",
    "rimraf": "^2.6.1",
    "rollup": "^0.47.4",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-uglify": "^2.0.0",
    "semver": "^5.4.0",
    "ts-jest": "^20.0.0",
    "ts-node": "^6.0.1",
    "tslint": "^5.6.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.4.0",
    "w3c-xmlhttprequest": "^2.1.2",
    "whatwg-fetch": "^2.0.4"
  }
}
