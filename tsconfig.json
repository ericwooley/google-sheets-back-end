{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": ".code",
    "newLine": "LF",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "dist", "es", "lib"],
  "include": ["./src/interfaces.ts"]
}
